<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.FoodDetailFragment">

        <ImageView
            android:id="@+id/foodImageId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:minHeight="200dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/foodNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodImageId"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="Food name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodCalorieId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodNameId"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="Food Calorie"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodCarbId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodCalorieId"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="Food Carb"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodProteinId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodCarbId"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="Food Protein"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodOilId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodProteinId"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="Food Oil"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>
</layout>